# Flask environment
FLASK_ENV=production

# Secret key for session signing - change in production
SECRET_KEY=change-me

# Database: defaults to a local sqlite file. Example Postgres:
# postgresql://user:password@host:5432/dbname
DATABASE_URL=sqlite:///data.db

# Port the app listens on (used by Docker)
PORT=8000

# Frontend API URL used at build/runtime
VITE_API_URL=http://localhost:8000
 
# Admin API key for protected endpoints (set to a strong random value in production)
ADMIN_API_KEY=change-me-to-a-strong-key